@model JonDJones.Core.ViewComponents.HeaderViewModel
@using EPiServer.Web.Mvc.Html
<!-- Header -->
<section id="header">
    <div class="container">

        <!-- Logo -->
        <h1 id="logo"><a href="index.html">@Model.Title</a></h1>
        <p>A responsive HTML5 site template. Manufactured by HTML5 UP.</p>

        <!-- Nav -->
        <nav id="nav">
            <ul>
                @foreach (var item in Model.MenuItems)
                {
                    @:<li>
                        @:<a class="icon solid fa-home" href="@Url.ContentUrl(item.MenuUrl)"><span>@item.Name</span></a>

                        @if (item.SubLinks != null && item.SubLinks.Any())
                        {
                            @:<ul>
                                @foreach (var subitem in item.SubLinks)
                                {
                                    @:<li><a href="@subitem.ToMappedLink()">@subitem.Title</a></li>
                                }
                            @:</ul>
                        }

                    @:</li>
                }
            </ul>
        </nav>
    </div>
</section>